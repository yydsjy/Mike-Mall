<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mikeyyds.mall">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".MikeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MikeMall"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".biz.account.LoginActivity"></activity>
        <activity android:name=".biz.account.RegisterActivity"></activity>
        <activity android:name=".biz.goods.GoodsListActivity"></activity>
        <activity android:name=".route.DegradeGlobalActivity"></activity>
        <activity android:name=".biz.detail.DetailActivity"></activity>
        <activity android:name=".biz.notice.NotiveListActivity"></activity>
    </application>

</manifest>